<?php declare(strict_types=1);

use Pure\NewPlugin\Test\TestBootstrapper;

require __DIR__ . '/TestBootstrapper.php';

return (new TestBootstrapper())
    ->setProjectDir($_SERVER['PROJECT_ROOT'] ?? dirname(__DIR__, 5))
    ->setLoadEnvFile(true)
    ->setForceInstallPlugins(true)
    ->addActivePlugins('{{pluginName}}')
    ->addCallingPlugin()
    ->bootstrap()
    ->setClassLoader(require dirname(__DIR__, 5) . '/vendor/autoload.php')
    ->getClassLoader();
